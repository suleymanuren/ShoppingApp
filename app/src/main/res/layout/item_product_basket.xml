<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataHolder"
            type="com.suleymanuren.shoppingapp.data.model.BasketProduct" />

    </data>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="3dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="Product Image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{dataHolder.image}"
                tools:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/product_title"
                android:maxLines="1"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@{dataHolder.title}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_img"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="dsadsadsadasdsadsa" />



            <TextView
                android:paddingTop="8dp"
                android:maxLines="2"
                android:textSize="12sp"

                android:id="@+id/product_description"
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{dataHolder.description}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_img"
                app:layout_constraintTop_toBottomOf="@+id/product_title"
                tools:text="123" />

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/product_count_text"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/product_description"
                app:layout_constraintEnd_toStartOf="@id/product_count"
                app:layout_constraintStart_toEndOf="@+id/product_img"
                android:text="Quantity: " />
            <TextView
                android:maxLines="1"
                android:paddingTop="12dp"
                android:id="@+id/product_count"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:productCount="@{dataHolder.count}"
                app:layout_constraintEnd_toStartOf="@id/product_price_text"
                app:layout_constraintStart_toEndOf="@+id/product_count_text"
                app:layout_constraintTop_toBottomOf="@+id/product_description"
                tools:text="123" />

            <TextView
                android:text="Total Price: "
                android:id="@+id/product_price_text"
                android:paddingTop="12dp"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                app:layout_constraintEnd_toStartOf="@id/product_price"
                app:layout_constraintStart_toEndOf="@+id/product_count"
                app:layout_constraintTop_toBottomOf="@+id/product_description"/>
            <TextView
                android:id="@+id/product_price"
                android:paddingTop="12dp"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/product_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_price_text"
                app:productPrice="@{dataHolder.price * dataHolder.count}"
                tools:text="123" />










        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
